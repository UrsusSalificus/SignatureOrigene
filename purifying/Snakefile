rule download_genomes:
    output:
        "../data/genomes/{species}_genomes.fna"
    shell:
        "bash ../scripts/download_genomes.sh {wildcards.species} {output}"

rule download_features:
    output:
        "../data/factors/features/{species}_feature_table.txt"
    shell:
        "bash ../scripts/download_features.sh {wildcards.species} {output}"

rule download_repeats:
    output:
        "../data/factors/repeats/{species}_repeats.txt"
    shell:
        "bash ../scripts/download_repeats.sh {wildcards.species} {output}"

rule download_rr:
    output:
        "../data/factors/recombination_rates/{species}_RR_spline.RData"
    shell:
        "bash ../scripts/download_repeats.sh {wildcards.species} {output}"

rule purifying:
    input:
        "../data/genomes/{species}_genomes.fna",
        "../data/factors/repeats/{species}_repeats.txt",
        "../data/factors/features/{species}_feature_table.txt"
    output:
        "data/genomes/{windows}/{species}_{factors}_pure.fna"
    shell:
        "python3 scripts/masking_to_pure.py {wildcards.factors} \
            {wildcards.windows} {input} {output}"

rule pure_CGR:
    input:
        "data/genomes/{windows}/{species}_{factors}_pure.fna"
    output:
        "data/following/CGRs/{windows}/{species}_{factors}_pure_done.txt"
    threads:
        99
    shell:
        "python3 ../scripts/windowed_CGR.py {input} {wildcards.windows} \
            {threads} {output} {wildcards.factors}"

rule pure_FCGR:
    input:
        "data/following/CGRs/{windows}/{species}_{factors}_pure_done.txt"
    output:
        "files/FCGRs/{windows}_{kmer}/{species}_{factors}_pure_FCGRs.txt"
    threads:
        99
    shell:
        "python3 ../scripts/windowed_FCGR.py {input} {wildcards.species} \
            {wildcards.windows} {wildcards.kmer} {threads} {output} \
            {wildcards.factors}"



rule concatenating_each:
    output:
        "files/FCGRs/{windows}_{kmer}/each_concatenated/{species}_FCGRs.txt"
    shell:
        """
        cat files/FCGRs/{wildcards.windows}_{wildcards.kmer}/{wildcards.species}*.txt \
            ../scaling/files/FCGRs/{wildcards.windows}_{wildcards.kmer}/{wildcards.species}_FCGRs.txt >> {output}
        """

rule FCGRs_dist_each:
    input:
        "files/FCGRs/{windows}_{kmer}/each_concatenated/{species}_FCGRs.txt"
    output:
        "files/distances/manhattan/{windows}_{kmer}/each_concatenated/{species}_dist_matrix.RData"
    threads:
        99
    shell:
        "Rscript ../scripts/manhattan_distance.R {input} {output}"

rule fitting_each:
    input:
        "files/distances/manhattan/{windows}_{kmer}/each_concatenated/{species}_dist_matrix.RData"
    output:
        "files/distances/manhattan/{windows}_{kmer}/each_concatenated/{species}_fit.RData"
    threads:
        99
    shell:
        "Rscript ../scripts/fitting_dist.R {input} {output}"

rule MDS_each:
    input:
        "files/distances/manhattan/{windows}_{kmer}/each_concatenated/{species}_fit.RData"
    output:
        "files/results/{windows}_{kmer}/{species}_MDS_all_factors.png"
    shell:
        "Rscript scripts/MDS_all_factors.R {output} {input} \
            {wildcards.windows} {wildcards.kmer}"



rule concatenating_pairwise:
    output:
        "files/FCGRs/{windows}_{kmer}/pairwise_concatenated/{species}_vs_{comparison}_FCGRs.txt"
    shell:
        """
        mkdir temp
        # Copy everything to temp directory, adding the species abbreviation
        all_actual_species=$( find files/FCGRs/{wildcards.windows}_{wildcards.kmer}/{wildcards.species}*.txt )
        for each_actual in $all_actual_species; do
            file_name_only=$( basename $each_actual )
            sed -e 's/^/{wildcards.species}_/' $each_actual > temp/$file_name_only
        done

        all_comparison=$( find files/FCGRs/{wildcards.windows}_{wildcards.kmer}/{wildcards.comparison}*.txt )
        for each_comparison in $all_comparison; do
            file_name_only=$( basename $each_comparison )
            sed -e 's/^/{wildcards.comparison}_/' $each_comparison > temp/$file_name_only
        done

        # Now, can concatenate everything in one file
        cat temp/{wildcards.species}*.txt temp/{wildcards.comparison}*.txt >> {output}
        rm -r temp
        """

rule FCGRs_dist_pairwise:
    input:
        "files/FCGRs/{windows}_{kmer}/pairwise_concatenated/{species}_vs_{comparison}_FCGRs.txt"
    output:
        "files/distances/manhattan/{windows}_{kmer}/pairwise_concatenated/{species}_vs_{comparison}_dist_matrix.RData"
    threads:
        99
    shell:
        "Rscript ../scripts/manhattan_distance.R {input} {output}"

rule fitting_pairwise:
    input:
        "files/distances/manhattan/{windows}_{kmer}/pairwise_concatenated/{species}_vs_{comparison}_dist_matrix.RData"
    output:
        "files/distances/manhattan/{windows}_{kmer}/pairwise_concatenated/{species}_vs_{comparison}_fit.RData"
    threads:
        99
    shell:
        "Rscript ../scripts/fitting_dist.R {input} {output}"

rule MDS_pairwise:
    input:
        "files/distances/manhattan/{windows}_{kmer}/pairwise_concatenated/{species}_vs_{comparison}_fit.RData"
    output:
        "files/results/{windows}_{kmer}/{species}_MDS_pairwise.png"
    shell:
        "Rscript scripts/MDS_all_factors.R {output} {input} \
            {wildcards.windows} {wildcards.kmer}"
