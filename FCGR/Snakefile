GS, = glob_wildcards("config/gs/{any}")
FEATURES, = glob_wildcards("config/features/{any}")

rule download:
    output:
        "../data/genomes/{species}_genomes.fna",
        "../data/genomes/{species}_feature_table.fna"
    shell:
        "bash ../scripts/download_genomes.sh {wildcards.species} {output}"

rule CGR:
    input:
        "../data/genomes/{species}_genomes.fna"
    output:
        "../data/following/CGRs/{windows}/{species}_done.txt"
    threads:
        3
    shell:
        "python3 ../scripts/windowed_CGR.py {input} {wildcards.windows} {threads} {output}"

if "CDS" in FEATURES:
    rule CDS_extract:
        input:
            "../data/genomes/{species}_genomes.fna",
            "../data/genomes/{species}_feature_table.fna"
        output:
            "../files/features/{windows}_{feat}/{species}.txt"
        shell:
            "python3 ../scripts/extract_CDS.py {input} {wildcards.windows} {output}"

rule FCGR:
    input:
        "../data/following/CGRs/{windows}/{species}_done.txt",
        "../data/genomes/{species}_genomes.fna"
    output:
        "files/FCGRs/{windows}_{kmer}/{species}_FCGRs.txt"
    threads:
        3
    shell:
        "python3 scripts/windowed_FCGR.py {input} {wildcards.windows} {wildcards.kmer} {threads} {output}"

rule FCGR_dist:
    input:
        "files/FCGRs/{windows}_{kmer}/{species}_FCGRs.txt",
        "../data/genomes/{species}_genomes.fna",
    output:
        "files/distances/pearson/{windows}_{kmer}/{species}_dist_matrix.txt"
    shell:
        "python3 scripts/pearson_dist.py {input} {wildcards.windows} {output}"

rule figures:
    input:
        "files/distances/pearson/{windows}_{kmer}/{species}_dist_matrix.txt",
        "../files/features/{windows}_{feat}/{species}.txt",
        expand("config/gs/{gs}", gs = GS)
    output:
        "files/results/{windows}_{kmer}_{feat}/{species}_correlation.png",
        "files/results/{windows}_{kmer}_{feat}/{species}_MDS.png"
    shell:
        """
        Rscript ../scripts/cor_dist_feature.R {output} {input} {wildcards.feat} {wildcards.windows} {wildcards.kmer}
        Rscript ../scripts/MDS_dist_feature.R {output} {input} {wildcards.feat} {wildcards.windows} {wildcards.kmer}
        """
